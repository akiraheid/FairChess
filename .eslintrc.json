{
	"env": {
		"commonjs": true,
		"browser": true,
		"es2020": true,
		"jquery": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"ignorePatterns": ["dist/", "node_modules/", "src/public/js/chessboardjs/"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"no-mixed-spaces-and-tabs": "error",
		"no-unused-vars": ["error", {
			"argsIgnorePattern": "^_[0-9]*$"
		}],
		"no-var": "error",
		"prefer-const": ["error", {
			"destructuring": "any",
			"ignoreReadBeforeAssign": false
		}],
		"quotes": ["error", "single"],
		"semi": ["error", "never"]
	}
}
